{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GuideScope Sources",
  "description": "医療AI国内ガイドラインの一次資料コーパス定義",
  "type": "object",
  "required": ["version", "lastUpdated", "sources", "priorityDomains"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date"
    },
    "nextReviewDate": {
      "type": "string",
      "format": "date"
    },
    "maintainer": {
      "type": "string"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "url", "domain", "category"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "domain": { "type": "string" },
          "category": {
            "type": "string",
            "enum": ["regulatory", "guideline", "legal", "ethics", "other"]
          },
          "description": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "priorityDomains": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
